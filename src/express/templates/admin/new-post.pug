extends ../layout.pug

block content
  main
    section.modal.modal--flex
      .popup.popup--new-publication.popup--flex
        //- TODO: Объединить все поля под одну форму?
        //- form(action='/article/add' method='post')
        .new-publication
          .new-publication__header
            h1 Новая публикация
            .new-publication__date-form
              h3 Дата публикации

              form(action='/articles/add' method='POST')
                .new-publication__date-block
                  label(for='new-publication-date' aria-label='Календарь')
                  input#new-publication-date(type='text' name='pub-date' placeholder='21.03.2019')
            button.new-publication__button.button.button--colored(type='submit' form='pub-form') Опубликовать

          button.popup__button.button.button--popup-close(type='button' aria-label='Закрыть окно') Закрыть окно

          .new-publication__form.form
            form#pub-form(action='/articles/add' method='post')
              .form__wrapper.form__wrapper--intro
                .form__field
                  label
                    input(type='text' name='title' placeholder='Заголовок' required)
                .form__field.form__field--post-image
                  label
                    input#image-name-field(type='text' name='image-name' placeholder='Фотография' readonly)
                  .form__image-loader.form__image-loader--publication
                    label
                      input.visually-hidden(type='file' name='title-image')
                      | Обзор
                a.new-publication__form-link.button.button--transparent(href='#') Добавить категорию
              .form__wrapper.form__wrapper--text
                .form__field.form__field--publication-text
                  label
                    textarea(rows='1' name='lead' placeholder='Анонс публикации')
                .form__field.form__field--publication-text
                  label
                    textarea(rows='1' name='fulltext' placeholder='Полный текст публикации')
      .modal__overlay

block scripts
  script(src='/js/vendor.js')
  script(src='/js/main.js')
